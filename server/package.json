{
  "name": "relm-server",
  "version": "1.0.0",
  "author": "Duane Johnson",
  "type": "module",
  "exports": "./server.js",
  "engines": {
    "node": "^14.13.1 || >=16.0.0",
    "pnpm": ">=6"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "docs/**/*",
    "migrations/**/*",
    ".env.example",
    "tsconfig.json"
  ],
  "scripts": {
    "test": "cross-env NODE_ENV=test DATABASE_NAME=relm-test jest src/**/*.test.ts",
    "test:stress": "ts-node --esm ./src/scripts/stressTestParticipants.ts",
    "start": "tsc && cross-env TMP_DIR=data/tmp ASSETS_DIR=data/assets node dist/server.js",
    "build": "tsc",
    "pretest": "dropdb relm-test; createdb relm-test"
  },
  "dependencies": {
    "@peculiar/webcrypto": "^1.0.27",
    "aws-sdk": "2.1157.0",
    "base64-arraybuffer": "^0.2.0",
    "bcrypt": "^5.0.0",
    "conscript": "^0.3.0",
    "cors": "^2.8.5",
    "detect-file-type": "^0.2.8",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.1.10",
    "fastestsmallesttextencoderdecoder": "^1.0.22",
    "http-errors": "^1.8.0",
    "is": "^3.3.0",
    "level": "^6.0.1",
    "lib0": "0.2.51",
    "lodash.debounce": "^4.0.8",
    "md5-file": "^5.0.0",
    "minimist": "^1.2.6",
    "moment": "^2.27.0",
    "multer": "^1.4.2",
    "object.fromentries": "^2.0.5",
    "passport": "^0.6.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth2": "^0.2.0",
    "passport-linkedin-oauth2": "^2.0.0",
    "passport-local": "^1.0.0",
    "passport-twitter-oauth2": "^2.1.1",
    "pg": "^8.2.1",
    "pg-promise": "^10.5.8",
    "pg-sql": "^1.1.0",
    "pgkeen": "^1.4.0",
    "postgres-migrations": "5.3.0",
    "relm-common": "workspace:*",
    "sharp": "^0.25.4",
    "twilio": "^3.71.2",
    "uuid": "^8.3.2",
    "ws": "^7.2.3",
    "y-leveldb": "^0.1.0",
    "y-protocols": "1.0.5",
    "yjs": "13.5.27"
  },
  "devDependencies": {
    "@jest-mock/express": "^1.4.0",
    "@jest/globals": "27.5.1",
    "@jest/types": "^28.0",
    "@types/express": "^4.17.11",
    "@types/node": "^17.0.5",
    "@types/passport": "^1.0.9",
    "@types/passport-facebook": "^2.1.11",
    "@types/passport-google-oauth2": "^0.1.5",
    "@types/passport-linkedin-oauth2": "^1.5.3",
    "@types/sharp": "^0.28.0",
    "@types/ws": "^7.4.1",
    "cross-env": "^7.0.2",
    "estrace": "^4.0.0",
    "jest": "^28.0",
    "node-fetch": "^3.2.6",
    "supertest": "6.2.3",
    "ts-jest": "^28.0",
    "ts-node": "^10.7.0",
    "typescript": "4.6.3"
  },
  "resolutions": {
    "bl": "4.0.3"
  },
  "jest": {
    "verbose": true,
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "//": "when importing in ts, accept .js:",
    "transform": {
      "\\.[jt]sx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "(.+)\\.js": "$1"
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ]
  }
}
