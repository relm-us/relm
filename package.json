{
	"private": true,
	"scripts": {
		"build": "cross-env NODE_ENV=production webpack",
		"dev": "webpack-dev-server --content-base public --hot",
		"test": "jest",
		"test:watch": "yarn run test -- --watch",
		"start": "serve public -l 8080",
		"validate": "svelte-check"
	},
	"scripts.comments": {
		"notes": [
			"Good docs on getting jest working: https://daveceddia.com/svelte-typescript-jest/"
		]
	},
	"devDependencies": {
		"@babel/core": "^7.11.5",
		"@babel/plugin-transform-runtime": "^7.11.5",
		"@babel/preset-env": "^7.11.5",
		"@babel/runtime": "^7.12.1",
		"@types/jest": "^26.0.15",
		"@types/three": "^0.103.2",
		"autoprefixer": "^9.8.6",
		"babel-loader": "^8.1.0",
		"brotli-webpack-plugin": "^1.1.0",
		"clean-webpack-plugin": "^3.0.0",
		"cross-env": "^7.0.2",
		"css-loader": "^4.2.0",
		"duplicate-package-checker-webpack-plugin": "^3.0.0",
		"jest": "^26.6.3",
		"mini-css-extract-plugin": "^0.9.0",
		"optimize-css-assets-webpack-plugin": "^5.0.3",
		"postcss-loader": "^3.0.0",
		"sass": "^1.26.10",
		"sass-loader": "^10.0.1",
		"source-map-loader": "^1.1.2",
		"svelte": "^3.24.1",
		"svelte-check": "^1.0.32",
		"svelte-jester": "^1.1.5",
		"svelte-loader-hot": "^0.3.1",
		"svelte-preprocess": "^4.2.0",
		"terser-webpack-plugin": "^4.0.0",
		"ts-jest": "^26.4.4",
		"ts-loader": "^8.0.2",
		"typescript": "^4.0.2",
		"webpack": "^4.44.1",
		"webpack-cli": "^3.3.12",
		"webpack-dev-server": "^3.11.0"
	},
	"dependencies": {
		"@budibase/colorpicker": "^1.0.1",
		"@dimforge/rapier3d": "^0.2.9",
		"eventemitter3": "^4.0.7",
		"hecs": "^0.16.0",
		"hecs-plugin-core": "^0.16.0",
		"hecs-plugin-three": "^0.16.0",
		"serve": "^11.3.2",
		"simplex-noise": "^2.4.0",
		"stats.js": "^0.17.0",
		"svelt-yjs": "0.2.1",
		"svelte-icons": "^2.1.0",
		"svelte-select": "^3.14.1",
		"three": "0.115.0",
		"yjs": "^13.4.4"
	},
	"browserslist": [
		"defaults"
	],
	"jest": {
		"transform": {
			"^.+\\.svelte$": [
				"svelte-jester",
				{
					"preprocess": true
				}
			],
			"^.+\\.ts$": "ts-jest",
			"^.+\\.js$": "babel-jest"
		},
		"moduleFileExtensions": [
			"js",
			"ts",
			"svelte"
		],
		"moduleNameMapper": {
			"^~/(.*)": "<rootDir>/src/$1"
		}
	}
}
