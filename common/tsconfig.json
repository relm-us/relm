{
  "exclude": [
    "node_modules/*"
  ],
  "include": [
    "src"
  ],
  "compilerOptions": {
    "target": "es2017",
    "module": "es2020",
    "declaration": true,
    "moduleResolution": "node",
    "importsNotUsedAsValues": "remove",
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
		"paths": { "~/*": ["./*"] },
    "typeRoots": [
      "types"
    ],
    "types": [
      "node"
    ]
  }
}